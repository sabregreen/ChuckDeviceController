@using ChuckDeviceController.Data.Entities
@model DeviceGroup
@{
    ViewData["Title"] = "Device Group Details " + Model?.Name;
}

<h1>Device Group Details @Model?.Name</h1>

<p>@Html.ValidationMessage("DeviceGroup", new { @class = "text-danger" })</p>

<div>
    <h4>Device Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Devices)
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model?.Devices ?? new List<string>())
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Name">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>