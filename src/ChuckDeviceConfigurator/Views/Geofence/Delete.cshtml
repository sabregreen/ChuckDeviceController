@using ChuckDeviceController.Data.Entities;
@model Geofence
@{
    ViewData["Title"] = "Delete Geofence " + Model?.Name;
}

<h1>Delete Geofence</h1>

<p>@Html.ValidationMessage("Geofence", new { @class = "text-danger" })</p>

<br />
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Geofence" asp-action="Index">Geofences</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Geofence</li>
    </ol>
</nav>

<h3>Are you sure you want to delete this geofence?</h3>
<div>
    <h4>Geofence '@Model?.Name'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Type)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Type)
    </dd>
</dl>