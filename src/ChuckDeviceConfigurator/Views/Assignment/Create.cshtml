@using ChuckDeviceController.Data.Entities
@model Assignment
@{
    ViewData["Title"] = "Create Assignment";
}

<h1>Create Assignment</h1>

<p>@Html.ValidationMessage("Assignment", new { @class = "text-danger" })</p>

<br />
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Assignment" asp-action="Index">Assignments</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create Assignment</li>
    </ol>
</nav>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeviceUuid" class="control-label"></label>
                <select asp-for="DeviceUuid" class="form-control" asp-items="@(ViewBag.Devices)">
                    <option value="">Please select one</option>
                </select>
                <span asp-validation-for="DeviceUuid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceInstanceName" class="control-label"></label>
                <select asp-for="SourceInstanceName" class="form-control" asp-items="@(new SelectList(ViewBag.Instances, "Name", "Name"))">
                    <option value="">Please select one</option>
                </select>
                <span asp-validation-for="SourceInstanceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstanceName" class="control-label"></label>
                <select asp-for="InstanceName" class="form-control" asp-items="@(new SelectList(ViewBag.Instances, "Name", "Name"))">
                    <option value="">Please select one</option>
                </select>
                <span asp-validation-for="InstanceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label> <small class="text-muted"><i>(Set to 12am to create "On-Complete" assignment)</i></small>
                <input asp-for="Time" class="form-control" type="time" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label> <small class="text-muted"><i>(Leave empty for any date)</i></small>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" id="OnComplete" name="OnComplete" value="true"> Create On-Complete Assignment</label>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" asp-for="Enabled" value="true" checked> Is Enabled</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}