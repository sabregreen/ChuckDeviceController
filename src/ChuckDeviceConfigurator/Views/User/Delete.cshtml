@using ChuckDeviceConfigurator.Data;
@model ApplicationUser
@{
    ViewData["Title"] = "Delete User Account " + Model?.UserName;
}

<h1>Delete User Account</h1>

<br />
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete User</li>
    </ol>
</nav>

<p>@Html.ValidationMessage("User", new { @class = "text-danger" })</p>

<h3>Are you sure you want to delete this user account?</h3>
<div>
    <h4>User Account '@Model?.UserName'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="UserName" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.UserName)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.UserName)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Email)
    </dd>
</dl>