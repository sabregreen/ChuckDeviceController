@{
    var pokemon = (IEnumerable<dynamic>)(ViewData["Pokemon"] ?? new List<dynamic>());
    var priorityList = (List<string>)(ViewData["PriorityList"] ?? new List<string>());
    var selected = string.Join(',', priorityList);
    var selectedPokemon = pokemon
        //.Where(x => x.selected)
        .Where(x => priorityList.Contains(x.id))
        .ToDictionary(x => x.id, x => x);
}

<link rel="stylesheet" href="~/css/pokemon-list.css" />

<div class="form-group">
    <div class="form-floating mb-3">
        <input id="search" class="form-control" placeholder="i.e Pikachu or 25" onkeyup="onPokemonSearch()" data-toggle="tooltip" data-html="true" title="Search by pokemon name and pokedex id." />
        <label for="search">@localizer["Search"]</label>
    </div>
    <div class="row">
        <div class="col col-lg-8 col-md-12 col-sm-12">
            <div class="mb-3">
                <label for="pokemon-list">@localizer["Pokemon"]</label>
                <div id="pokemon-list" name="pokemon-list" class="pokemon-list">
                    @foreach (var pkmn in pokemon)
                    {
                        <div class="pokemon-icon-sprite item @(pkmn.selected ? "active pokemon-selected" : "")" id="@pkmn.id" data-name="@pkmn.name" data-image="@pkmn.image" data-pokemon-id="@pkmn.pokemonId" data-value="@pkmn.id" onclick="onPokemonClicked(this)">
                            <img src="@pkmn.image" width="48" height="48" />
                            <span class="caption">#@pkmn.pokemonId</span>
                        </div>
                    }
                </div>
            </div>
            <div class="mb-3">
                <label>@localizer["Select"]</label>
                <br />
                <button type="button" class="btn btn-primary btn-sm" onclick="selectAllPokemon(true);">@localizer["All"]</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="selectAllPokemon(false);">@localizer["None"]</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="invertSelection();">@localizer["Invert"]</button>
                <div class="btn-group">
                    <button type="button" class="btn btn-warning btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        @localizer["Generation"]
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#" class="dropdown-item" onclick="selectByGen(1);">@localizer["1st Generation"]</a></li>
                        <li><a href="#" class="dropdown-item" onclick="selectByGen(2);">@localizer["2nd Generation"]</a></li>
                        <li><a href="#" class="dropdown-item" onclick="selectByGen(3);">@localizer["3rd Generation"]</a></li>
                        <li><a href="#" class="dropdown-item" onclick="selectByGen(4);">@localizer["4th Generation"]</a></li>
                        <li><a href="#" class="dropdown-item" onclick="selectByGen(5);">@localizer["5th Generation"]</a></li>
                        <li><a href="#" class="dropdown-item" onclick="selectByGen(6);">@localizer["6th Generation"]</a></li>
                        <li><a href="#" class="dropdown-item" onclick="selectByGen(7);">@localizer["7th Generation"]</a></li>
                        <li><a href="#" class="dropdown-item" onclick="selectByGen(8);">@localizer["8th Generation"]</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        @localizer["Rarity"]
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#" class="dropdown-item" onclick="selectByRarity('common');">@localizer["Common"]</a></li>
                        <li><a href="#" class="dropdown-item" onclick="selectByRarity('rare');">@localizer["Rare"]</a></li>
                        <li><a href="#" class="dropdown-item" onclick="selectByRarity('ultra');">@localizer["Ultra Rare"]</a></li>
                        <li><a href="#" class="dropdown-item" onclick="selectByRarity('epic');">@localizer["Epic"]</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col col-lg-4 col-md-12 col-sm-12">
            <label for="pokemon-priority-list">@localizer["Priority List"] <span id="priority-count">(0)</span></label>
            <ul id="pokemon-priority-list" name="pokemon-priority-list" class="list-group pokemon-priority-list">
                @foreach (var id in priorityList)
                {
                    var pkmn = selectedPokemon[id];
                    <li data-id="@id" class="list-group-item">
                        <div class="row">
                            <div class="col col-lg-2 col-md-2 col-sm-2 px-1">
                                <img src="@pkmn.image" width="32" height="32" />
                            </div>
                            <div class="col col-lg-8 col-md-8 col-sm-8">
                                <small class="caption">@pkmn.name <small>(#@pkmn.pokemonId)</small></small>
                            </div>
                            <div class="col col-lg-2 col-md-2 col-sm-2 px-1">
                                <button type="button" class="btn btn-danger btn-sm float-end" onclick="removePriorityList('@id', false, '#pokemon-priority-list');"><i class="fa-solid fa-trash-can"></i></button>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<div class="modal fade" id="generateModal" tabindex="-1" aria-labelledby="generateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="generateModalLabel">@localizer["Generate Pokemon Priority List"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@localizer["Generate a Pokemon priority list based on database statistics of least seen Pokemon."]</p>
                <div class="btn-toolbar mb-3 float-end" role="toolbar">
                    <button type="button" class="btn btn-primary btn-sm mx-1" onclick="generateList();">@localizer["Generate"]</button>
                    <button type="button" class="btn btn-danger btn-sm mx-1" onclick="clearList();">@localizer["Clear"]</button>
                </div>
                <br />
                <label>@localizer["Ignored Pokemon"] <small>(@localizer["i.e. event Pokemon, etc"])</small></label>
                <textarea id="pokemon-ignored" class="form-control" rows="3"></textarea>
                <ul id="modal-priority-list" class="list-group pokemon-priority-list mt-4">
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@localizer["Close"]</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="saveGeneratedList();">@localizer["Save"]</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/sortable-1.15.0/Sortable.min.js"></script>
<script src="~/js/pokemon-list.js"></script>
<script>
    setSelectedPokemon('@selected');
</script>