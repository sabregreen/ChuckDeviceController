@using ChuckDeviceController.Data.Entities;
@model Instance
@{
    ViewData["Title"] = "Delete Instance " + Model.Name;
}

<h1>Delete Instance</h1>

<p>@Html.ValidationMessage("Instance", new { @class = "text-danger" })</p>

<br />
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Instance" asp-action="Index">Instances</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Instance</li>
    </ol>
</nav>

<h3>Are you sure you want to delete this instance?</h3>
<div>
    <h4>Instance '@Model?.Name'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Type)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Type)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.MinimumLevel)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.MinimumLevel)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.MaximumLevel)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.MaximumLevel)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Geofences)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Geofences)
    </dd>
    @if (Model?.Data?.IsEvent ?? false)
    {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data.AccountGroup)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data.AccountGroup)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data.IsEvent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data.IsEvent)
        </dd>
    }
</dl>