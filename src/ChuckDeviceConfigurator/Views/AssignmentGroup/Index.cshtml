@using ChuckDeviceConfigurator.ViewModels
@using ChuckDeviceController.Data.Entities
@using ChuckDeviceController.Extensions
@model ViewModelsModel<AssignmentGroup>
@{
    ViewData["Title"] = "Assignment Groups";
}

<h1>Assignment Groups</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].AssignmentIds)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @string.Join(", ", item.AssignmentIds)
                </td>
                <td>
                    <a asp-action="Start" asp-route-id="@item.Name">Start</a> |
                    <a asp-action="Edit" asp-route-id="@item.Name">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Name">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Name">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>