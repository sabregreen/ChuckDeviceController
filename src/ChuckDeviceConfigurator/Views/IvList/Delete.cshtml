@using ChuckDeviceController.Data.Entities;
@model IvList
@{
    ViewData["Title"] = "Delete IV List " + Model?.Name;
}

<h1>Delete IV List @Model?.Name</h1>

<p>@Html.ValidationMessage("IvList", new { @class = "text-danger" })</p>

<h3>Are you sure you want to delete this IV list?</h3>
<div>
    <h4>Device '@Model?.Name'</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PokemonIds)
        </dt>
        <dd class = "col-sm-10">
            @string.Join(", ", Model.PokemonIds.Take(10))
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Name" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>