@model CreateUserAgentViewModel
@{
    ViewData["Title"] = "Create User Agent";
}

<h1>Create User Agent</h1>

<p>@Html.ValidationMessage("Robot", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Robot", ControllerText = "Web Crawler User Agents", CurrentPage = "Create User Agent" })

<h4>User Agent</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="UserAgent" class="form-control" placeholder="" />
                <label asp-for="UserAgent"></label>
                <span asp-validation-for="UserAgent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}