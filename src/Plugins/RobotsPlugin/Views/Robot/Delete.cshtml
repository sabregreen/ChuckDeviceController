@model CreateUserAgentViewModel
@{
    ViewData["Title"] = "Delete User Agent " + Model?.UserAgent;
}

<h1>Delete User Agent</h1>

<p>@Html.ValidationMessage("Geofence", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Robot", ControllerText = "Web Crawler User Agents", CurrentPage = "Delete User Agent" })

<h3>Are you sure you want to delete this user agent?</h3>
<div>
    <h4>User Agent '@Model?.UserAgent'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="UserAgent" />
            <input type="submit" value="Yes" class="btn btn-danger btn-sm" />
            <a asp-action="Index" class="btn btn-secondary btn-sm">No</a>
        </form>
    </div>
</div>