@model UserAgentRouteViewModel
@{
    ViewData["Title"] = "Delete User Agent Route " + Model?.UserAgent;
}

<h1>Delete User Agent Route</h1>

<p>@Html.ValidationMessage("Route", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Robot", ControllerText = "User Agent Routes", Action = "Details", CurrentPage = "Delete User Agent Route", Id = Model?.UserAgent })

<h3>Are you sure you want to delete this user agent route?</h3>
<div>
    <h4>User Agent Route '@Model?.Route'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="UserAgent" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-controller="Robot" asp-action="Details" asp-route-id="@Model?.UserAgent" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.UserAgent)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.UserAgent)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Route)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Route)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Comment)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Comment)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.IsAllowed)
    </dt>
    <dd class="col-sm-10">
        @(Model?.IsAllowed ?? false ? "Yes" : "No")
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.IsCustom)
    </dt>
    <dd class="col-sm-10">
        @(Model?.IsCustom ?? false ? "Yes" : "No")
    </dd>
</dl>